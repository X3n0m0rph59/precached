#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
# export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


%:
	dh $@ --with=systemd --exclude=vendor

override_dh_auto_configure:
	# do nothing

override_dh_update_autotools_config:
	# do nothing

override_dh_auto_build:
	export CARGO_HOME=".cargo"
	export CARGO_TARGET_DIR="target/"
	cargo build --all --release --verbose --no-default-features

override_dh_autoclean:
	$(RM) -r target/

override_dh_auto_install:
	# We pick stuff directly from target/

override_dh_installinit:
	dh_systemd_enable --name=precached.service precached.service
	dh_systemd_enable --no-enable --name=precached-prime-caches.service precached-prime-caches.service
	dh_systemd_enable --name=precached-prime-caches.timer precached-prime-caches.timer

override_dh_auto_test:
	# we don't run tests at the moment

# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
override_dh_auto_configure:
	#	dh_auto_configure -- #	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)
